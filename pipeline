pipeline {
    agent any
    
    stages {
        stage('run collection') {
            steps {
                // Clone the GitHub repository
                git branch: 'main', url: 'https://github.com/jnsob/jenkins_test.git'
            }
        }
        
        stage('Run Postman tests') {
            steps {
                // Install Newman (Postman command line tool)
                sh 'docker run -t postman/newman run -h'
                
                // Run the Postman tests
                sh 'docker run -v ${WORKSPACE}:/etc/newman --workdir /etc/newman -t /postman/newman Register.json --environment postman_environment.json'
            }
        }
    }
}